model Subject {
  id                String              @id @default(uuid())
  name              String
  code              String              @unique
  credits           Int
  semesterId        String
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  semester          Semester            @relation("SemesterSubjects", fields: [semesterId], references: [id], onDelete: Cascade)
  Grade             Grade?
  
  // New relationships for attendance and live classes
  attendances       Attendance[]
  attendanceSummaries AttendanceSummary[] @relation("SubjectAttendanceSummaries")
  liveClasses       LiveClass[]
  
  // Section relationships
  sectionAssignments ProfessorSectionAssignment[] @relation("SubjectSectionAssignments")
  sectionResources   SectionResource[]   @relation("SubjectSectionResources")
}