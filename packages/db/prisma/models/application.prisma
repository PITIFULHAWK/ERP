model Application {
  id                   String            @id @default(uuid())
  firstName            String
  lastName             String
  dateOfBirth          DateTime
  gender               Gender
  nationality          String
  phoneNumber          String
  alternatePhoneNumber String?
  address              String
  city                 String
  state                String
  pincode              String
  class10Percentage    Float
  class10Board         String
  class10YearOfPassing Int
  class12Percentage    Float
  class12Board         String
  class12YearOfPassing Int
  class12Stream        String
  hasJeeMainsScore     Boolean           @default(false)
  jeeMainsScore        Int?
  jeeMainsRank         Int?
  jeeMainsYear         Int?
  preferredCourseId    String
  status               ApplicationStatus @default(PENDING)
  verifiedById         String?
  verifiedAt           DateTime?
  verificationNotes    String?
  rejectionReason      String?
  userId               String            @unique
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt
  preferredCourse      Course            @relation(fields: [preferredCourseId], references: [id])
  user                 User              @relation(fields: [userId], references: [id])
  verifiedBy           User?             @relation("VerifiedApplications", fields: [verifiedById], references: [id])
  documents            Document[]
  User                 User[]            @relation("userApplication")

  @@map("applications")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum ApplicationStatus {
  PENDING
  UNDER_REVIEW
  VERIFIED
  REJECTED
  INCOMPLETE
}
