model Course {
  id              String        @id @default(uuid())
  name            String
  code            String        @unique
  credits         Int
  totalSemester   Int
  totalFees       Float
  currentStudents Int           @default(0)
  universityId    String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  semester        Semester[]    @relation("SemesterCourse")
  applications    Application[]
  university      University    @relation(fields: [universityId], references: [id], onDelete: Cascade)
  payments        Payment[]
  
  // New relationships for attendance and academic management
  enrollments     StudentEnrollment[] @relation("CourseEnrollments")
  sections        Section[]           @relation("CourseSections")

  @@map("courses")
}
