model Notice {
  id             String         @id @default(uuid())
  title          String
  content        String
  publishedAt    DateTime       @default(now())
  universityId   String
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  priority       NoticePriority @default(LOW)
  targetAudience NoticeAudience @default(ALL)
  type           NoticeType     @default(GENERAL)
  university     University     @relation(fields: [universityId], references: [id])

  @@map("notices")
}

enum NoticeType {
  GENERAL
  URGENT
  ACADEMIC
  HOSTEL
  EXAM
}

enum NoticePriority {
  LOW
  MEDIUM
  HIGH
}

enum NoticeAudience {
  ALL
  STUDENTS
  FACULTY
  STAFF
}

enum NoticeStatus {
  DRAFT
  PUBLISHED
  EXPIRED
}
