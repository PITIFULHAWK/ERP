model AcademicYear {
  id              String            @id @default(uuid())
  year            String            // e.g., "2024-2025"
  startDate       DateTime
  endDate         DateTime
  isActive        Boolean           @default(false)
  universityId    String
  
  // Academic Calendar PDF
  calendarPdfUrl  String?           // URL to the academic calendar PDF
  calendarPdfName String?           // Name of the PDF file
  calendarCloudinaryPublicId String? // Cloudinary public ID for file management
  calendarUploadedAt DateTime?      // When the PDF was uploaded
  
  university      University        @relation(fields: [universityId], references: [id], onDelete: Cascade)
  
  // Related entities
  enrollments     StudentEnrollment[]
  liveClasses     LiveClass[]
  attendances     Attendance[]
  attendanceSummaries AttendanceSummary[]
  sections        Section[]
  
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@unique([universityId, year])
  @@map("academic_years")
}